<%= stylesheet_link_tag 'index' %>

<% if logged_in? %>
<div class="container">
 <h1>CM一覧</h1>
 <div class="input-group">
   <div class="form-group" style="display: flex">
     <%= form_tag(search_path,:method => 'get') do %>
      <%= text_field_tag :keyword, '',placeholder: "キーワード検索", class: "form-control", style: "width:180px; float:left;"%>
      <span class="input-group-btn" style="float: right; margin-left:1px;">
        <%= button_tag 'Search',class: "btn btn-secondary" %>
      </span>
     <% end %>
    </div>
  </div>
</div>
<%= render 'cmposts/cmposts', cmposts: @cmposts %>
<div class="container">
  <%= link_to '新規投稿の作成', new_cmpost_path, class: "btn btn-primary" %>
</div>
<% else %>
<div class="jumbotron jumbotron-fluid">
  <p class="welcome">CMposts</p>
  <p class="sentence">CMに込められた想いを伝えたい</p>
  <%= link_to 'Sign up now', signup_path, class: 'btn btn-lg btn-danger' %>
</div>
<section id="vison">
  <div class="container text-center">
    <h1 class="vison">【VISION】</h1>
    <h2><strong>CMを、もっと面白く!!</strong></h2>
    <h3><br>CMpostsは、あなたが心動かされたCMを共有できるアプリケーション。</br>
     <br>いつも何気なく見るCMにもドラマがあり、それをどう感じるかは人それぞれ。</br>
     <br>あなたのその一瞬の気持ちを残しませんか？</br>
     <br>まずは登録から</br>
    </h3>
    <%= link_to 'Sign up', signup_path, class: 'btn btn-lg btn-danger' %>
  </div>
<% end %>